<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Glassmorphic, cyberpunk, 2advanced-inspired theme colors and effects -->
    <Color x:Key="AccentColor">#FF00FFF7</Color>
    <Color x:Key="BentoBoxBg">#AA1A1A2E</Color>
    <Color x:Key="NeonPink">#FFFF00FF</Color>
    <Color x:Key="NeonBlue">#FF00CFFF</Color>
    <Color x:Key="NeonYellow">#FFFFF700</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BentoBoxBrush" Color="{StaticResource BentoBoxBg}"/>
    <DropShadowEffect x:Key="NeonShadow" Color="#FF00FFF7" BlurRadius="32" ShadowDepth="0"/>
    <BlurEffect x:Key="GlassEffect" Radius="32"/>
    <!-- Add more gradients, 3D, and glass resources as needed -->
</ResourceDictionary>
